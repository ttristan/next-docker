{
  "name": "next-docker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "npm run docker:install && npm run docker:start && sleep 3 && sh scripts/open-nextjs.sh",
    "restart": "docker compose down && npm run docker:start",
    "stop": "npm run docker:stop",
    "docker:install": "sh config/docker/scripts/certs.sh",
    "docker:start": "docker compose --env-file .env.dev.local up -d",
    "docker:stop": "docker compose down",
    "docker:shell:nextjs": "docker-compose exec nextjs /bin/sh",
    "docker:shell:nginx": "docker-compose exec nginx /bin/sh",
    "docker:log:nextjs": "docker compose logs --follow nextjs",
    "docker:log:nginx": "docker compose logs --follow nginx"
  },
  "dependencies": {
    "next": "12.1.4",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "typescript": "4.6.2"
  }
}
